<div class="wln" style="padding-top:15%;">
    <div style="text-align:center;">
        <span>
            <input type="text" id="searchkey" onkeydown="ToSearch(event)" style="width:300px;height:33px;border-radius:3px;padding-left:1rem;" placeholder="姓名、会员号" />
            <a class="button green" onclick="Search();" style="height:34px;border-radius:4px;width:1000px;">查询</a>
            <a class="button green" href="members#new" style="height:34px;border-radius:4px;width:1000px;">新会员</a>
        </span>
    </div>
</div>
<script type="text/javascript">
    function ToSearch(e) {
        if (e.keyCode == 13) {
            Search();
        }
    }
    function Search() {
        var key = $('#searchkey').val();
        if (key == '') {
            control.alert("请输入信息！");
            return false;
        }
        $.getJSON(location.pathname + '?do=search', { key: key }, function (json) {
            if (json.success) {
                window.location.href = location.pathname + "?mid=" + json.data.Id;
            } else {
                control.alert(json.message);
            }
        });
    }
</script>